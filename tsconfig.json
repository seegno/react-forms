{
  "compilerOptions": {
    "allowJs": true,
    "baseUrl": ".",
    "composite": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "incremental": true,
    "isolatedModules": true,
    "lib": ["es6", "dom"],
    "moduleResolution": "node",
    "noEmit": true,
    "noImplicitAny": true,
    "outDir": "dist",
    "paths": {
      "src/*": ["src/*"],
      "test/*": ["test/*"],
    },
    "target": "es6",
    "jsx": "react"
  },
  "include": [
    "./src/**/*",
    "./test/**/*"
  ]
}
